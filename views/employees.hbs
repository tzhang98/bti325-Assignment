<div class="row">
    <div class = "col-md-12">
        <h2> Employees 
            <a href="/employees/add" class = "btn btn-success pull-right"> Add New Employee </a>
        </h2>
        <hr>
        {{!-- 
        {{#each employees}}
            {{firstName}} {{lastName}} <br>
        {{else}}
            <div class="col-md-12 text-center">
                <strong> No Employees Available </strong>
            </div>
        {{/each}}
        --}}
        <div class = "table-responsive">
            <table class = "table">
                <thead>
                    <tr> 
                        <th> Employees Num </th>
                        <th> Full Name </th>
                        <th> Email </th>
                        <th> Address </th>
                        <th> Manager ID </th>
                        <th> Status </th>
                        <th> Department </th>
                        <th> Hire On </th>
                    </tr>
                </thead>
                <tbody>
                      {{#each employees}}
                         <tr>
                            <td> {{employeeNum}} </td>
                            <td> <a href = "/employee/{{employeeNum}}"> {{firstName}} {{lastName}} </a> </td>
                            <td> <a href="mailto: {{email}}"> {{email}} </a> </td>
                            <td> {{addressStreet}}, {{addresCity}}, {{addressState}}, {{addressPostal}} </td>
                            <td> <a href="/employees?manager={{employeeManagerNum}}"> {{employeeManagerNum}} </a> </td>
                            <td> <a href="/employees?status={{status}}"> {{status}} </a> </td>
                            <td> <a href="/employees?department={{department}}"> {{department}} </a> </td>
                            <td> {{hireDate}} </td>
                            <td> <a href="/employees/delete/{{employeeNum}}" class="btn btn-danger"> Remove </a> </td>
                    {{else}}
                            <div class="col-md-12 text-center">
                                <strong> {{message}} </strong>
                            </div>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div> {{!-- <div class = "table-responsive"> --}}
    </div>
</div>
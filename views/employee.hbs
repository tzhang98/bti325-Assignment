<div class="row">
 <div class="col-md-12">
 <h2>{{viewData.employee.firstName}} {{ viewData.employee.lastName}} - Employee: {{ viewData.employee.employeeNum}}</h2>
 <hr>
 <form method="post" action="/employee/update">
 <input type="hidden" name="employeeNum" value={{viewData.employee.employeeNum}}>
            <fieldset>
                <legend> Personal Information </legend>
                <div class = "row">
                    <div class="col-md-6">
                        <div class = "form-group">
                            <label for="firstName"> First Name: </label>
                            <input class="form-control" id="firstName" name="firstName" 
                                   type="text" value="{{ viewData.employee.firstName}}">
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div clas="form-group">
                            <label for="lastName"> Last Name: </label>
                            <input class="form-control" id="lastName" name="lastName"
                                    type="text" value="{{ viewData.employee.lastName}}">
                        </div>
                    </div>
                </div> 
                <div class = "row">
                    <div class="col-md-6">
                        <div class="form-group">
                           <label for="email"> Email: </label>
                           <input class="form-control" id="email" name="email"
                                    type = "email" value = "{{ viewData.employee.email}}">
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label for ="SSN"> Social Security Number: </label>
                            <input class="form-control" id="SSN" name="SSN"
                                    type="text" value = "{{ employee.SSN}}" readonly>
                        </div>
                    </div>
                </div>
                <div class = "row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="addressStreet"> Adress (Street): </label>
                            <input class="form-control" id="addressStreet" name="addressStreet"
                                    type="text" value="{{ viewData.employee.addressStreet}}">
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="addressCity">Address (City):</label>
                                <input class="form-control" id="addressCity" name="addressCity" 
                                type="text" value="{{ viewData.employee.addressCity}}" />
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="addressState"> Adress (State): </label>
                            <input class="form-control" id="addressState" name="addressState"
                                    type="text" value="{{ viewData.employee.addressState}}">
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="addressPostal"> Adress (Zip Code): </label>
                            <input class="form-control" id="addressPostal" name="addressPostal"
                                    type="text" value="{{ viewData.employee.addressPostal}}">
                        </div>
                    </div>
                </div>
            </fieldset>
        
            <fieldset>
                <legend> Company Information </legend>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="isManager"> Manager: </label>
                            <input class="form-control" id="isManager" name="isManager"
                                    type="checkbox" {{#if
                                viewData.employee.isManager}} checked  {{/if}}>
                           
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="employeeManagerNum"> Employee's Manager Number: </label>
                            <input class="for-control" id="employeeManagerNum" name="employeeManagerNum"
                                    type="text" value = "{{ viewData.employee.employeeManagerNum}}">
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Status:</label><br>
                            <input class="checkbox-inline" id="fullTime" name="status"
                                    type="radio" value = "Full Time"  {{#equal viewData.employee.status "Full Time" }} checked {{/equal}}
                                >
                            <label for="fullTime"> Full Time </label> &nbsp;
                            <input class="checkbox-inline" id="partTime" name="status"
                                    type="radio" value = "Part Time"  {{#equal viewData.employee.status "Part Time" }} checked {{/equal}}
                                >
                            <label for="partTime"> Part Time </label>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="department"> Department: </label>
                            {{!-- <select class="form-control" name="department" id="department">
                                <option value="1" {{#equal employee.department "1" }} selected {{/equal}}> Creative Services </option>
                                <option value="2" {{#equal employee.department "2" }} selected {{/equal}}> Product Development </option>
                                <option value="3" {{#equal employee.department "3" }} selected {{/equal}}> Marketing </option>
                                <option value="4" {{#equal employee.department "4" }} selected {{/equal}}> Strategic Planning </option>
                                <option value="5" {{#equal employee.department "5" }} selected {{/equal}}> Accounting </option>
                                <option value="6" {{#equal employee.department "6" }} selected {{/equal}}> Human resources </option>
                                <option value="7" {{#equal employee.department "7" }} selected {{/equal}}> Quality Analysis </option>
                            </select> --}}
                            {{#if viewData.departments}}
                                    <select class="form-control" name="department" id="department">
                                    {{#each viewData.departments}}
                                        <option value="{{departmentId}}" {{#if selected}} selected {{/if}} >{{departmentName}}
                                                </option>
                                     {{/each}}
                                    </select>
                            {{else}}
                                        <div>No Departments</div>
                            {{/if}}
                        </div>
                    </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label> Hire Date: </label>
                            <input class="form-control" id="hireDate" name="hireDate" type="text" 
                                    value = "{{ employee.hireDate}}" readonly>
                        </div>
                    </div>
                </div>

                </div>
            </fieldset>
 <input type="submit" class="btn btn-primary pull-right" value="Update Employee" /><br /><br
/><br />
 </form>
 </div>
</div>